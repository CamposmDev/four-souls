<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.stage.Stage?>

<Stage fx:id="stage" onCloseRequest="#exit" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.camposmdev.app.character_builder.controller.CharacterCardBuilderAppController">
   <scene>
      <Scene>
         <root>
            <BorderPane fx:id="root">
                <style>
                    -fx-font-size: 12pt;
                </style>
               <center>
                  <GridPane fx:id="form" hgap="8.0" maxHeight="-Infinity" maxWidth="-Infinity" vgap="8.0" BorderPane.alignment="TOP_LEFT">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Character Name" GridPane.rowIndex="1">
                        </Label>
                        <Label text="HP" GridPane.rowIndex="2">
                        </Label>
                        <Label text="ATK" GridPane.rowIndex="3">
                        </Label>
                        <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        </TextField>
                        <TextField fx:id="tfHP" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        </TextField>
                        <TextField fx:id="tfATK" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        </TextField>
                        <Label text="Eternal Card" GridPane.rowIndex="4" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#chooseEternal" text="Select..." GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <ButtonBar buttonMinWidth="100.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.valignment="BOTTOM">
                          <buttons>
                              <Button mnemonicParsing="false" onAction="#previous" text="Previous" />
                              <Button cancelButton="true" mnemonicParsing="false" onAction="#skip" text="Skip" />
                            <Button defaultButton="true" mnemonicParsing="false" onAction="#submit" text="OK" />
                          </buttons>
                        </ButtonBar>
                        <ImageView fx:id="iv" fitHeight="700.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" />
                     </children>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                  </GridPane>
               </center>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <bottom>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="lblNote">
                        </Label>
                     </children>
                  </HBox>
               </bottom>
            </BorderPane>
         </root>
      </Scene>
   </scene>
</Stage>

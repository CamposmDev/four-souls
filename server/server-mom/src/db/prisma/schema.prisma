

generator client {
    provider    = "prisma-client-js"
}

datasource db {
    provider    = "mongodb"
    url         = env("DB_URL")
}

model User {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    email       String  @db.String
    username    String  @db.String
    password    String  @db.String
    @@map("users")
    @@unique([email, username], map: "emailUsername")
    @@index([username])
}